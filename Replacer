using System;  
  public class Replacer  
   {  
     public static void Main()
      {  
            int x,y;
            Console.WriteLine("Please enter a x value:");
            x = Convert.ToInt32(Console.ReadLine());
            Console.WriteLine("Please enter a y value:");
            y = Convert.ToInt32(Console.ReadLine());

            x = x + y;
            y = x - y;
            x = x - y;
           
            
           Console.WriteLine("When your values are replaced, your x will be {0} and your y will be {1}",x,y);
      }  
  } 
